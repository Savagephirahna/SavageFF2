#!/bin/sh
# Replace all common variants of "Fale Hub" -> "Savage Hub" (case-insensitive).
# Handles:
#  - "Fale Hub", "FaleHub", "Fale-Hub", "Fale_Hub"
#  - case variations like "fale hub", "FALEHUB", etc.
#  - possessive "Fale Hub's" -> "Savage Hub's"
#
# Note: This writes the changed content back to the same files.
# If you want backups, uncomment the cp ... lines.

set -eu

FILES="pasted.txt pasted2.txt"

for f in $FILES; do
  if [ ! -f "$f" ]; then
    echo "Skipping missing file: $f"
    continue
  fi

  # Optional backup:
  # cp "$f" "$f.bak"

  # Use Perl with single-string mode so multiline files are handled.
  # Pattern:
  #  - \bFale(?:[ _-]?Hub) matches Fale Hub, FaleHub, Fale-Hub, Fale_Hub
  #  - (\'s)? captures optional possessive "'s" so we keep it
  #  - /i makes it case-insensitive
  # Replacement always uses "Savage Hub" (capitalized as requested) and preserves "'s" if present.
  perl -0777 -pe 's/\bFale(?:[ _-]?Hub)(\'s)?\b/"Savage Hub".($1||"")/gie' "$f" > "$f.tmp" && mv "$f.tmp" "$f"

  echo "Processed $f"
done

echo "Done. All variants replaced with 'Savage Hub' (preserving any trailing \"'s\")."